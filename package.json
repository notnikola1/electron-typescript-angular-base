{
  "name": "ui",
  "version": "0.0.0",
  "main": "App.js",
  "scripts": {
    "build:electron": "tsc -p ./tsconfig.ele.json",
    "wait-on-angular": "wait-on http://localhost:4200",
    "watch:electron": "nodemon --watch app/**.* --exec \"pnpm run build:electron && pnpm run wait-on-angular && cross-env ENV=dev electron ./dist/app/App.js\"",
    "dev": "concurrently \"pnpm run watch:electron\" \"pnpm run start\"",
    "ng": "ng",
    "start": "cross-env ENV=dev ng serve",
    "build": "cross-env ENV=prod tsc -p ./tsconfig.ele.json && cross-env ENV=prod ng build",
    "build:dev": "cross-env ENV=dev tsc -p ./tsconfig.ele.json && cross-env ENV=dev ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "pack": "node packPrepare.js && electron-packager ./dist/app MyApp --overwrite"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~19.2.11",
    "@angular/common": "~19.2.11",
    "@angular/compiler": "~19.2.11",
    "@angular/core": "~19.2.11",
    "@angular/forms": "~19.2.11",
    "@angular/platform-browser": "~19.2.11",
    "@angular/platform-browser-dynamic": "~19.2.11",
    "@angular/router": "~19.2.11",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~19.2.13",
    "@angular/cli": "~19.2.13",
    "@angular/compiler-cli": "~19.2.11",
    "@types/jasmine": "~5.1.8",
    "@types/node": "^22.15.21",
    "chalk": "^5.4.1",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-packager": "^17.1.2",
    "jasmine-core": "~5.7.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.3"
  }
}